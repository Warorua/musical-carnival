# --- hardening ---
Options -Indexes -MultiViews

# --- rewrites for the app folder ---
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /bombardier_kigotho/

  # Pretty agent URLs when accessed with the subfolder prefix:
  # https://bombardier.romulus.website/bombardier_kigotho/a/{slug}
  RewriteRule ^a/([A-Za-z0-9_-]+)/?$ agent/login.php?slug=$1 [L,QSA]

  # Donâ€™t rewrite real files/folders
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule . - [L]
</IfModule>
